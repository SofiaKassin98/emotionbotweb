{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/main.jsx",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/pregunta", "dest": "api/pregunta.js" },
    { "src": "/api/respuesta", "dest": "api/respuesta.js" }
  ]
}
