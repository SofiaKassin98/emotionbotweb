{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/pregunta",
        "function": "getPregunta"
      },
      {
        "source": "/api/respuesta",
        "function": "guardarRespuesta"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
